<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:weightSum="1.0"
    tools:context=".MainActivity"
    android:background="@color/background">

    <!--Layout holding TextField-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="0dip"
        android:layout_weight="0.2"
        android:background="@color/background">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:text="Hello Calculator!!"
            android:textAlignment="center"
            android:textSize="40sp"
            android:background="@color/text_field"
            android:id="@+id/display"/>
    </RelativeLayout>

    <!--Layout holding Delete-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="0dip"
        android:layout_weight="0.15"
        android:background="@color/background">

        <Button
            android:id="@+id/button_basic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:background="@drawable/button_normal"
            android:text="Basic"
            android:textColor="@color/button_text"
            android:textSize="50sp"/>

        <Button
            android:id="@+id/button_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/button_normal"
            android:text="DEL"
            android:textColor="@color/button_text"
            android:textSize="50sp"/>
    </RelativeLayout>

    <!--Calculator Buttons -->
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="0.7">

        <Button
            android:id="@+id/button_sin"
            android:layout_width="wrap_content"
            android:layout_height="75dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/button_normal"
            android:text="sin"
            android:textAllCaps="false"
            android:textColor="@color/button_text"
            android:textSize="35sp"
            android:layout_row="0"
            android:layout_column="0" />

        <Button
            android:id="@+id/button_cos"
            android:layout_width="wrap_content"
            android:layout_height="75dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/button_normal"
            android:text="cos"
            android:textAllCaps="false"
            android:textColor="@color/button_text"
            android:textSize="35sp"
            android:layout_row="0"
            android:layout_column="1" />

        <Button
            android:id="@+id/button_tan"
            android:layout_width="wrap_content"
            android:layout_height="75dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/button_normal"
            android:text="tan"
            android:textAllCaps="false"
            android:textColor="@color/button_text"
            android:textSize="35sp"
            android:layout_row="0"
            android:layout_column="2" />

        <Button
            android:id="@+id/button_i"
            android:layout_width="wrap_content"
            android:layout_height="75dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/button_normal"
            android:text="i"
            android:textColor="@color/button_text"
            android:textSize="35sp"
            android:textAllCaps="false"
            android:layout_row="0"
            android:layout_column="3" />

        <Button
            android:id="@+id/button_ln"
            android:layout_width="wrap_content"
            android:layout_height="75dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/button_normal"
            android:text="ln"
            android:textAllCaps="false"
            android:textColor="@color/button_text"
            android:textSize="35sp"
            android:layout_row="1"
            android:layout_column="0" />

        <Button
            android:id="@+id/button_log"
            android:layout_width="wrap_content"
            android:layout_height="75dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/button_normal"
            android:text="log"
            android:textAllCaps="false"
            android:textColor="@color/button_text"
            android:textSize="35sp"
            android:layout_row="1"
            android:layout_column="1" />

        <Button
            android:id="@+id/button_pi"
            android:layout_width="wrap_content"
            android:layout_height="75dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/button_normal"
            android:text="π"
            android:textAllCaps="false"
            android:textColor="@color/button_text"
            android:textSize="35sp"
            android:layout_row="1"
            android:layout_column="2" />

        <Button
            android:id="@+id/button_e"
            android:layout_width="wrap_content"
            android:layout_height="75dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/button_normal"
            android:text="e"
            android:textAllCaps="false"
            android:textColor="@color/button_text"
            android:textSize="35sp"
            android:layout_row="1"
            android:layout_column="3" />

        <Button
            android:id="@+id/button_percent"
            android:layout_width="wrap_content"
            android:layout_height="75dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/button_normal"
            android:text="%"
            android:textAllCaps="false"
            android:textColor="@color/button_text"
            android:textSize="35sp"
            android:layout_row="2"
            android:layout_column="0" />

        <Button
            android:id="@+id/button_factorial"
            android:layout_width="wrap_content"
            android:layout_height="75dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/button_normal"
            android:text="!"
            android:textAllCaps="false"
            android:textColor="@color/button_text"
            android:textSize="35sp"
            android:layout_row="2"
            android:layout_column="1" />

        <Button
            android:id="@+id/button_root"
            android:layout_width="wrap_content"
            android:layout_height="75dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/button_normal"
            android:text="√"
            android:textAllCaps="false"
            android:textColor="@color/button_text"
            android:textSize="35sp"
            android:layout_row="2"
            android:layout_column="2" />

        <Button
            android:id="@+id/button_power"
            android:layout_width="wrap_content"
            android:layout_height="75dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/button_normal"
            android:text="^"
            android:textAllCaps="false"
            android:textColor="@color/button_text"
            android:textSize="35sp"
            android:layout_row="2"
            android:layout_column="3" />

        <Button
            android:id="@+id/button_leftParen"
            android:layout_width="wrap_content"
            android:layout_height="75dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/button_normal"
            android:text="("
            android:textAllCaps="false"
            android:textColor="@color/button_text"
            android:textSize="35sp"
            android:layout_row="3"
            android:layout_column="0" />

        <Button
            android:id="@+id/button_rightParen"
            android:layout_width="wrap_content"
            android:layout_height="75dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/button_normal"
            android:text=")"
            android:textAllCaps="false"
            android:textColor="@color/button_text"
            android:textSize="35sp"
            android:layout_row="3"
            android:layout_column="1" />

        <Button
            android:id="@+id/blank1"
            android:layout_width="wrap_content"
            android:layout_height="75dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/button_normal"
            android:text=""
            android:textColor="@color/button_text"
            android:textSize="35sp"
            android:layout_row="3"
            android:layout_column="2" />

        <Button
            android:id="@+id/blank2"
            android:layout_width="wrap_content"
            android:layout_height="75dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/button_normal"
            android:text=""
            android:textColor="@color/button_text"
            android:textSize="35sp"
            android:layout_row="3"
            android:layout_column="3" />

    </GridLayout>
</LinearLayout>
